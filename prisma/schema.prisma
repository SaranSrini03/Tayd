generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  Blogid      Int       @id @default(autoincrement())
  BlogContent String    @unique
  Title       String
  SubTitle    String
  Author      String
  Like        Int
  comments    comment[]
}

model comment {
  commentId      Int    @id @default(autoincrement())
  CommentWritter String
  Content        String
  BlogId         Int
  Blog           Blog   @relation(fields: [BlogId], references: [Blogid])
}
